<apex:page renderAs="PDF" controller="ContractPDFController" applyHtmlTag="false" applyBodyTag="false" showHeader="false">
    <html>
        <head>
            <style>
                body {
                    font-family: Arial, sans-serif;
                    margin: 20px;
                    color: #333;
                }
                .header {
                    text-align: center;
                    background: #1e40af;
                    color: white;
                    padding: 15px;
                    border-radius: 8px;
                }
                .section {
                    margin: 20px 0;
                    padding: 10px;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                }
                .section-title {
                    font-size: 16px;
                    font-weight: bold;
                    color: #1e40af;
                    margin-bottom: 10px;
                }
                .field-label {
                    font-weight: bold;
                    display: inline-block;
                    width: 150px;
                }
                .field-value {
                    display: inline-block;
                }
                .footer {
                    text-align: center;
                    margin-top: 30px;
                    font-size: 12px;
                    color: #666;
                }
            </style>
        </head>
        <body>
            <div class="header">
                <h1>Property Sale Contract</h1>
            </div>
            <div class="section">
                <div class="section-title">Property Details</div>
                <p><span class="field-label">Name:</span> <span class="field-value">{!IF(ISBLANK(property.Name), 'N/A', property.Name)}</span></p>
                <p><span class="field-label">Address:</span> <span class="field-value">{!IF(ISBLANK(property.Address__c), 'N/A', property.Address__c)}</span></p>
                <p><span class="field-label">Price:</span> <span class="field-value">{!IF(ISBLANK(property.Price__c), 'N/A', 'â‚¹' & TEXT(property.Price__c))}</span></p>
                <p><span class="field-label">Type:</span> <span class="field-value">{!IF(ISBLANK(property.Property_Type__c), 'N/A', property.Property_Type__c)}</span></p>
                <p><span class="field-label">Bedrooms:</span> <span class="field-value">{!IF(ISBLANK(property.Bedrooms__c), 'N/A', property.Bedrooms__c)}</span></p>
                <p><span class="field-label">Square Footage:</span> <span class="field-value">{!IF(ISBLANK(property.Square_Footage__c), 'N/A', TEXT(property.Square_Footage__c) & ' sq.ft.')}</span></p>
            </div>
            <div class="section">
                <div class="section-title">Client Details</div>
                <p><span class="field-label">Name:</span> <span class="field-value">{!client.Name__c}</span></p>
                <p><span class="field-label">Email:</span> <span class="field-value">{!client.Email__c}</span></p>
                <p><span class="field-label">Phone:</span> <span class="field-value">{!IF(ISBLANK(client.Phone__c), 'N/A', client.Phone__c)}</span></p>
            </div>
            <div class="section">
                <div class="section-title">Owner Details</div>
                <p><span class="field-label">Name:</span> <span class="field-value">{!IF(ISBLANK(owner.Name__c), 'N/A', owner.Name__c)}</span></p>
                <p><span class="field-label">Email:</span> <span class="field-value">{!IF(ISBLANK(owner.Email__c), 'N/A', owner.Email__c)}</span></p>
                <p><span class="field-label">Phone:</span> <span class="field-value">{!IF(ISBLANK(owner.Phone__c), 'N/A', owner.Phone__c)}</span></p>
                <p><span class="field-label">Type:</span> <span class="field-value">{!IF(ISBLANK(owner.Type__c), 'N/A', owner.Type__c)}</span></p>
            </div>
            <div class="section">
                <div class="section-title">Terms</div>
                <p>The buyer agrees to purchase the property listed above for the stated price. The contract is subject to approval by both parties and completion of all necessary documentation.</p>
                <p><strong>Payment Terms:</strong> Full payment due within 30 days of signing, or as agreed in writing.</p>
                <p><strong>Signatures:</strong></p>
                <p>Buyer: _______________________________ Date: ________</p>
                <p>Seller: _______________________________ Date: ________</p>
            </div>
            <div class="footer">
                Generated by Property Management System on {!TODAY()}
            </div>
        </body>
    </html>
</apex:page>